{
  "name": "waveform-navigator",
  "version": "0.1.0",
  "description": "A React component to display and navigate audio waveforms with custom controls.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles.css": "./dist/styles.css",
    "./package.json": "./package.json"
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KHeavyy/waveform-navigator.git"
  },
  "homepage": "https://github.com/KHeavyy/waveform-navigator#readme",
  "bugs": {
    "url": "https://github.com/KHeavyy/waveform-navigator/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": [
    "*.css"
  ],
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:headed": "playwright test --headed",
    "visual:update": "UPDATE_SNAPSHOTS=1 playwright test e2e/visual.spec.ts",
    "clean": "rimraf dist",
    "build": "npm run clean && vite build && vite build --mode worker",
    "build:watch": "vite build --watch",
    "type-check": "tsc --noEmit",
    "lint": "npm run type-check",
    "prepublishOnly": "npm run type-check && npm test",
    "prepare": "npm run build",
    "dev": "concurrently \"npm run build:watch\" \"(cd demo && npm run dev)\""
  },
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "c8": "^10.1.3",
    "concurrently": "^8.2.0",
    "happy-dom": "^20.3.4",
    "jsdom": "^27.4.0",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.1.6",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.17"
  }
}
