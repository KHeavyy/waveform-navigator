{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "dist",
		"outDir": "dist",
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*"]
}
